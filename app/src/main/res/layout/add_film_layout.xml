<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/add_file_name"
        android:layout_width="92dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/add_film_name"
        android:layout_marginTop="194dp"
        android:text="File Name:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/add_date_released"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/add_file_name"
        android:layout_marginTop="134dp"
        android:text="Date Released:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/add_film_name"
        android:layout_width="92dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="72dp"
        android:text="Name:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/film_name_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/add_film_name"
        android:layout_toEndOf="@+id/add_date_released"
        android:ems="10"
        android:inputType="textPersonName"
        android:singleLine="false" />

    <EditText
        android:id="@+id/date_released_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/add_date_released"
        android:layout_alignStart="@+id/film_name_input"
        android:ems="10"
        android:inputType="textPersonName"
        android:singleLine="false" />

    <EditText
        android:id="@+id/file_name_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/add_file_name"
        android:layout_toEndOf="@+id/add_date_released"
        android:ems="10"
        android:inputType="textPersonName"
        android:singleLine="false" />

    <TextView
        android:id="@+id/add_film_header"
        android:layout_width="296dp"
        android:layout_height="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/add_file_name"
        android:layout_marginTop="17dp"
        android:text="Add a film:"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/add_film_button"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="153dp"
        android:layout_toEndOf="@+id/add_file_name"
        android:text="Submit Addition" />
</RelativeLayout>